{
  "bank_name": "barclays",
  "display_name": "Barclays",
  "branding": {
    "primary_color": "#0066CC",
    "secondary_color": "#003366",
    "accent_color": "#FFD700",
    "text_color": "#333333",
    "background_color": "#FFFFFF",
    "success_color": "#28A745",
    "warning_color": "#FFC107",
    "error_color": "#DC3545",
    "logo_path": "/static/images/banks/barclays/logo.svg",
    "favicon_path": "/static/images/banks/barclays/favicon.svg",
    "css_variables": {
      "--bank-primary": "#0066CC",
      "--bank-secondary": "#003366",
      "--bank-accent": "#FFD700",
      "--bank-text": "#333333",
      "--bank-background": "#FFFFFF"
    },
    "theme": {
      "name": "barclays_blue",
      "description": "Barclays' signature blue and gold theme",
      "gradients": {
        "primary": "linear-gradient(135deg, #0066CC 0%, #004499 100%)",
        "secondary": "linear-gradient(135deg, #003366 0%, #001122 100%)"
      }
    }
  },
  "file_format": "csv",
  "csv_naming_convention": {
    "pattern": "{month} {year} statement.csv",
    "month_format": "full_name",
    "year_format": "YYYY"
  },
  "account_types": {
    "Credit": {
      "statement_format": "credit_card",
      "balance_calculation": "running_balance"
    },
    "Chequing": {
      "statement_format": "deposit_account",
      "balance_calculation": "fixed_balance"
    },
    "Savings": {
      "statement_format": "deposit_account",
      "balance_calculation": "fixed_balance"
    }
  },
  "statement_parsing": {
    "opening_balance_keywords": ["OPENING BALANCE", "BALANCE BROUGHT FORWARD", "START BALANCE"],
    "closing_balance_keywords": ["CLOSING BALANCE", "BALANCE CARRIED FORWARD", "END BALANCE"],
    "date_formats": ["dd/MM/yyyy", "dd MMM"],
    "amount_formats": ["#,##0.00", "#,###.##", "Â£#,##0.00"],
    "csv_headers": ["Number", "Date", "Account", "Amount", "Subcategory", "Memo", "Balance"],
    "csv_delimiter": ",",
    "csv_encoding": "utf-8"
  },
  "patterns": {
    "credit_card": {
      "pattern": "(\\d{1,2}\\s+\\w{3})\\s+(.+?)\\s+([\\d,]+\\.\\d{2})\\s*([\\d,]+\\.\\d{2})?",
      "groups": {
        "date": 1,
        "description": 2,
        "amount": 3,
        "balance": 4
      },
      "example": "01 May Card Payment to Tesco Stores 2637 3.00 8,146.50"
    },
    "deposit_account": {
      "pattern": "(\\d{1,2}\\s+\\w{3})\\s+(.+?)\\s+([\\d,]+\\.\\d{2})\\s*([\\d,]+\\.\\d{2})?",
      "groups": {
        "date": 1,
        "description": 2,
        "amount": 3,
        "balance": 4
      },
      "example": "01 May Bill Payment to Axmo Ltd 1,095.00 8,146.50"
    },
    "two_column_format": {
      "pattern": "(\\d{1,2}\\s+\\w{3})\\s+(.+?)\\s+([\\d,]+\\.\\d{2})?\\s+([\\d,]+\\.\\d{2})?\\s+([\\d,]+\\.\\d{2})",
      "groups": {
        "date": 1,
        "description": 2,
        "money_out": 3,
        "money_in": 4,
        "balance": 5
      },
      "example": "01 May Bill Payment to Axmo Ltd 1,095.00 8,146.50"
    }
  },
  "transaction_mapping": {
    "date_field": "Date",
    "description_field": "Memo",
    "amount_field": "Amount",
    "category_field": "Subcategory",
    "account_field": "Account",
    "reference_field": "Number",
    "balance_field": "Balance"
  },
  "category_mapping": {
    "Contactless Card Purchase": "Transportation",
    "Card Purchase": "Shopping",
    "Bill Payment": "Bills",
    "Direct Debit": "Bills",
    "Counter Credit": "Income",
    "Credit": "Income",
    "Received From": "Income"
  }
} 