{
  "bank_name": "barclays",
  "display_name": "Barclays",
  "branding": {
    "primary_color": "#0066CC",
    "secondary_color": "#003366",
    "accent_color": "#FFD700",
    "text_color": "#333333",
    "background_color": "#FFFFFF",
    "success_color": "#28A745",
    "warning_color": "#FFC107",
    "error_color": "#DC3545",
    "logo_path": "/static/images/banks/barclays/logo.svg",
    "favicon_path": "/static/images/banks/barclays/favicon.svg",
    "css_variables": {
      "--bank-primary": "#0066CC",
      "--bank-secondary": "#003366",
      "--bank-accent": "#FFD700",
      "--bank-text": "#333333",
      "--bank-background": "#FFFFFF"
    },
    "theme": {
      "name": "barclays_blue",
      "description": "Barclays' signature blue and gold theme",
      "gradients": {
        "primary": "linear-gradient(135deg, #0066CC 0%, #004499 100%)",
        "secondary": "linear-gradient(135deg, #003366 0%, #001122 100%)"
      }
    }
  },
  "pdf_naming_convention": {
    "pattern": "{month} {year} statement.pdf",
    "month_format": "full_name",
    "year_format": "YYYY"
  },
  "account_types": {
    "Credit": {
      "statement_format": "credit_card",
      "balance_calculation": "running_balance"
    },
    "Chequing": {
      "statement_format": "deposit_account",
      "balance_calculation": "fixed_balance"
    },
    "Savings": {
      "statement_format": "deposit_account",
      "balance_calculation": "fixed_balance"
    }
  },
  "statement_parsing": {
    "opening_balance_keywords": ["OPENING BALANCE", "BALANCE BROUGHT FORWARD"],
    "closing_balance_keywords": ["CLOSING BALANCE", "BALANCE CARRIED FORWARD"],
    "date_formats": ["MMM d", "MMM dd", "dd/MM/yyyy"],
    "amount_formats": ["#,##0.00", "#,###.##", "Â£#,##0.00"]
  },
  "patterns": {
    "credit_card": {
      "pattern": "(\\d{1,2}/\\d{1,2}/\\d{4})\\s+(\\d{1,2}/\\d{1,2}/\\d{4})\\s+(.+?)\\s+([\\d,]+\\.[\\d]{2})\\s*([\\d,]+\\.[\\d]{2})?",
      "groups": {
        "transaction_date": 1,
        "post_date": 2,
        "description": 3,
        "amount": 4,
        "balance": 5
      },
      "example": "15/03/2024 16/03/2024 AMAZON.CO.UK 45.67 1,234.56"
    },
    "deposit_account": {
      "pattern": "(\\d{1,2}/\\d{1,2}/\\d{4})\\s+(.+?)\\s+([\\d,]+\\.[\\d]{2})\\s+([\\d,]+\\.[\\d]{2})",
      "groups": {
        "date": 1,
        "description": 2,
        "amount": 3,
        "balance": 4
      },
      "example": "15/03/2024 Salary Payment 2,500.00 5,234.56"
    }
  }
} 