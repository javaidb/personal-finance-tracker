{
  "bank_name": "Scotiabank",
  "display_name": "Scotiabank",
  "pdf_naming_convention": {
    "pattern": "{month} {year} e-statement.pdf",
    "month_format": "full_name",
    "year_format": "YYYY"
  },
  "account_types": {
    "Credit": {
      "statement_format": "credit_card",
      "balance_calculation": "running_balance"
    },
    "Chequing": {
      "statement_format": "deposit_account", 
      "balance_calculation": "fixed_balance"
    },
    "Savings": {
      "statement_format": "deposit_account",
      "balance_calculation": "fixed_balance"
    }
  },
  "statement_parsing": {
    "opening_balance_keywords": ["OPENING BALANCE"],
    "closing_balance_keywords": ["CLOSING BALANCE"],
    "date_formats": ["MMM d", "MMM dd"],
    "amount_formats": ["#,##0.00", "#,###.##"]
  },
  "patterns": {
    "credit_card": {
      "pattern": "(\\d{3})\\s+(\\w{3}\\s+\\d{1,2})\\s+(\\w{3}\\s+\\d{1,2})\\s+(.+?)\\s+(\\d+\\.\\d{2})(-)?$",
      "groups": {
        "reference_number": 1,
        "transaction_date": 2,
        "post_date": 3,
        "details": 4,
        "amount": 5,
        "negative_indicator": 6
      },
      "example": "001 Aug 2 Aug 5 UBER CANADA/UBERTRIPTORONTOON 22.36"
    },
    "deposit_account": {
      "pattern": "((?:Jan|Feb|Mar|Apr|May|Jun|Jul|Aug|Sep|Oct|Nov|Dec)\\s*\\d{1,2})\\s+([^$\\d]+?)\\s+(\\d{1,3}(?:,\\d{3})*(?:\\.\\d{2})?)\\s+(\\d{1,3}(?:,\\d{3})*(?:\\.\\d{2})?))",
      "groups": {
        "date": 1,
        "description": 2,
        "amount": 3,
        "balance": 4
      },
      "example": "Mar7 Payrolldep. 2,694.74 42,060.20"
    }
  }
} 